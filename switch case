//MY FOURTH PROGRAM WITH MY CAPTAIN AVIRAL SIR

#include<stdio.h>
#include<stdlib.h>

int main()
{
    int a;
    char ch;

    while(1)
    {
        printf("Do you want to enter number? Press Y/N \n");
        scanf("%c",&ch);
           if(ch=='y'||ch=='Y')
           {
               printf("Press any number between 1 to 5 \n");
               scanf("%d",&a);

               switch(a)
               {
                   case 1: printf("Food item - Rajma Chawal \nPrice - Rs. 50 \n");
                           break;
                   case 2: printf("Food item - Kadhai Paneer \nPrice - Rs. 150 \n");
                           break;
                   case 3: printf("Food item - Mojito  \nPrice - Rs. 45 \n");
                           break;
                   case 4: printf("Food item - Tandoori Roti \nPrice - Rs. 10 \n");
                           break;
                   case 5: printf("Food item - Mango Icecream \nPrice - Rs. 30 \n");
                           break;
                   default:printf("Out of range");
                           break;
               }
           }

           else
                {
                     if(ch=='n'||ch=='N')
                        exit(0);
                    else
                        printf("Please enter a valid key\n");
                }
                fflush(stdin);
    }
return 0;
}
